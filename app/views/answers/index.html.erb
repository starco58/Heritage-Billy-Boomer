<div class="page-header">
  <h1>Answers</h1>
</div>

<p><a href="/answers/new" class="btn btn-primary">Add a New Answer</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Answer 1</th>
      <th>Answer 2</th>
      <th>Answer 3</th>
      <th>Answer 4</th>
      <th>Answer 5</th>
      <th>Questionnaire</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.answer_1 %></td>
        <td><%= answer.answer_2 %></td>
        <td><%= answer.answer_3 %></td>
        <td><%= answer.answer_4 %></td>
        <td><%= answer.answer_5 %></td>
        <td><%= answer.questionnaire_id %></td>
        <td><%= answer.buyer_id %></td>
        <td><%= answer.seller_id %></td>
        <td><%= answer.comment %></td>
        <td>
          <a href="/answers/<%= answer.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/answers/<%= answer.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_answer/<%= answer.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

